{
  "name": "foxify-restify-odin",
  "version": "1.1.0",
  "description": "Easily restify odin databases",
  "author": "Ardalan Amini <ardalanamini22@gmail.com> [https://github.com/ardalanamini]",
  "license": "MIT",
  "homepage": "https://github.com/foxifyjs/foxify-restify-odin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxifyjs/foxify-restify-odin.git"
  },
  "bugs": {
    "url": "https://github.com/foxifyjs/foxify-restify-odin/issues"
  },
  "keywords": [
    "foxify",
    "restify",
    "odin"
  ],
  "engines": {
    "node": ">=8.12"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "lint": "tslint -p tsconfig.json -c tslint.json --exclude '**/*.d.ts'",
    "test": "jest --runInBand",
    "coverage": "npm test -- --coverage",
    "codecov": "npm run coverage && codecov"
  },
  "dependencies": {
    "prototyped.js": "^0.20.2",
    "qs": "^6.5.2"
  },
  "peerDependencies": {
    "@foxify/odin": ">=0.2.2",
    "foxify": ">=0.10.14"
  },
  "devDependencies": {
    "@foxify/odin": "^0.2.2",
    "@types/jest": "^23.3.9",
    "@types/qs": "^6.5.1",
    "codecov": "^3.1.0",
    "foxify": "^0.10.14",
    "jest": "^23.6.0",
    "jest-environment-node": "^23.4.0",
    "mongodb": "^3.1.9",
    "mongodb-memory-server": "^2.7.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tsutils": "^3.5.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/setup.js",
    "globalTeardown": "<rootDir>/test/teardown.js",
    "testEnvironment": "<rootDir>/test/environment.js",
    "moduleFileExtensions": [
      "ts",
      "js",
      "node"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*\\.ts"
    ]
  }
}
